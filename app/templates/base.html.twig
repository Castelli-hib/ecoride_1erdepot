<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}Ecoride
			{% endblock %}
		</title>

		<link rel="icon" type="image/x-icon" href="{{ asset('assets/images/icons/7.svg') }}">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
		<link rel="stylesheet" href="{{ asset('assets/styles/css/app.css') }}"> {% block stylesheets %}{% endblock %}
		</head>

		<body>
			{% set route = app.request.attributes.get('_route') %}

			{% if app.user and route not in ['app_register', 'app_login', 'app_homepage'] %}
				{% include 'partials/_navbar_deco.html.twig' %}
			{% else %}
				{% include 'partials/_navbar.html.twig' %}
			{% endif %}


			{% include 'partials/_header.html.twig' %}

			{% for messages in app.flashes %}
				{% for message in messages %}
					<p>{{ message|raw }}</p>
				{% endfor %}
			{% endfor %}

			{% block body %}{% endblock %}

			{% include 'partials/_footer.html.twig' %}

			{% block javascripts %}
				{# {{ importmap(['app', 'register']) }} #}
				<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
				<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.min.js"></script>

			{% endblock %}
		</body>
	</html>
