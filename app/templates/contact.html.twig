{% block body %}
<section class="contact-section py-5">
    <div class="container">
        <h1 class="text-center  text-success mb-4 ">Contactez-nous</h1>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0 p-4">
                    {{ form_start(form) }}
                        {{ form_row(form.nom) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.sujet) }}
                        {{ form_row(form.telephone) }}
                        {{ form_row(form.message) }}

                        <div class="text-center mt-3">
                            <button type="submit" class="btn btn-success px-4 btn-outline">Envoyer</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
